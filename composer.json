  "authors": [
    {
      "name": "lmh",
      "email": "lmh@weiyian.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-openssl": "*",
    "guzzlehttp/guzzle": "^6.5",
    "pimple/pimple": "^3.0",
    "illuminate/support": "^5.8",
    "ext-redis": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "autoload": {
    "psr-4": {
