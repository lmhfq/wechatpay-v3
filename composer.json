    "ext-openssl": "*",
    "ext-redis": "*",
    "guzzlehttp/guzzle": "^6.5|| ^7.10",
    "pimple/pimple": "^3.0",
    "illuminate/support": "^5.8 ||^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
    "monolog/monolog": "^1.22 || ^2.0"
